<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" name="postTitle" id="postTitle" class="form-control">
        </div>
        <div class="form-group">
            <label for="postBody">Post</label>
            <textarea name="postBody" id="postBody" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>
<%- include("partials/footer"); -%>